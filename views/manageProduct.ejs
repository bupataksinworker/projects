<%- include('head') %>
</head>
    <body>
        <%- include('navbar') %>
        <div id="popup">
            <br>
            <div class="w3-display-container">
                <div align="center">
                    <label>
                        <b>จัดการข้อมูลสินค้า</b>
                    </label>
                </div>
                <br>
                <div class="row">
                    <!-- ส่วนเมนู NAVBAR -->
                    <div class="col-sm-1"></div>
                    <!-- ส่วนซ้าย: ฟอร์ม -->
                    <div class="col-sm-2">
                        <form>
                            <div class="form-group">
                                <label for="typeID">เลือกประเภท</label>
                                <select class="form-control" name="typeID" id="typeID" required
                                    onchange="selectedType(this.value)">
                                    <option value=""></option>
                                    <% types.forEach(function(type) { %>
                                        <option value="<%= type._id %>">
                                            <%= type.typeName %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div><br>
                            <div class="form-group">
                                <label for="sizeID">เลือกไซส์</label>
                                <select class="form-control" name="sizeID" id="sizeID" required
                                    onchange="selectedProduct(document.getElementById('typeID').value,this.value,document.getElementById('gradeID').value)">
                                    <option value=""></option>
                                </select>
                            </div><br>
                            <div class="form-group">
                                <label for="gradeID">เลือกเกรด</label>
                                <select class="form-control" name="gradeID" id="gradeID" required
                                    onchange="selectedProduct(document.getElementById('typeID').value,document.getElementById('sizeID').value,this.value)">
                                    <option value=""></option>
                                </select>
                            </div><br>
                            <!-- <div class="form-group">
                                <label for="ber">เลือกเบอร์</label>
                                <select class="form-control" name="ber" id="ber"
                                    onchange="selectedProduct(document.getElementById('typeID').value,document.getElementById('sizeID').value,document.getElementById('gradeID').value,this.value)">
                                    <option value=""></option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                </select>
                            </div><br> -->
                            <button type="button" class="btn btn-success btn-lg" onclick="addProduct()">เพิ่มสินค้า</button>
                        </form>
                    </div>

                    <!-- ส่วนขวา: ตารางแสดงข้อมูล -->
                    <div class="col-sm-9">
                        <table class="table" style="text-align: center;">
                            <thead>
                                <tr>
                                    <th scope="col">ลำดับ</th>
                                    <th scope="col">ชื่อสินค้า</th>
                                    <th scope="col">เบอร์</th>
                                    <th scope="col">displayName</th>
                                    <th scope="col">ไซส์</th>
                                    <th scope="col">ประเภท</th>
                                    <th scope="col">เกรด</th>
                                    <th scope="col">แก้ไข</th>
                                    <th scope="col">ลบข้อมูล</th>
                                </tr>
                            </thead>
                            <tbody id="tableProduct">

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
        <script src="script/productScript.js"></script>
    </body>
    </html>