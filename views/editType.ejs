<%- include('head') %>
</head>
    <body>
        <%- include('navbar') %>
            <br>
            <div class="w3-display-container">
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <h2 class="text-center mb-4"><b>แก้ไขข้อมูลสินค้า</b></h2>
                        <form id="updateTypeForm">
                            <input type="hidden" name="edit_id" id="edit_id" value="<%= type._id %>">
                            <div class="form-group">
                                <label for="grain">ประเภท</label>
                                <select class="form-control" id="grain" name="grain" required>
                                    <% grains.forEach(function(grain) { %> 
                                        <option value="<%= grain._id %>" <%= grain._id.toString() === type.grainID._id.toString() ? 'selected' : '' %>>
                                            <%= grain.grainName %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="origin">ประเทศ</label>
                                <select class="form-control" id="origin" name="origin" required>
                                    <% origins.forEach(function(origin) { %> 
                                        <option value="<%= origin._id %>" <%= origin._id.toString() === type.originID._id.toString() ? 'selected' : '' %>>
                                            <%= origin.originName %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="heat">เผา/ดิบ</label>
                                <select class="form-control" id="heat" name="heat" required>
                                    <% heats.forEach(function(heat) { %> 
                                        <option value="<%= heat._id %>" <%= heat._id.toString() === type.heatID._id.toString() ? 'selected' : '' %>>
                                            <%= heat.heatName %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                            <br>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary mr-2" onclick="updateType()">อัพเดท</button>
                                ||
                                <a class="btn btn-warning" href="javascript:void(0)" onclick="handleCancel()">ยกเลิก</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </body>

    </html>
    <script src="script/typeScript.js"></script>