<%- include('head') %>
</head>
    <body>
        <%- include('navbar') %>
            <br>
            <div class="w3-display-container">
                <div align="center">
                    <label>
                        <b>จัดการรูปร่างสินค้า</b>
                    </label>
                </div>
                <br>
                <div class="row">
                    <!-- ส่วนเมนู NAVBAR -->
                    <div class="col-sm-1"></div>
                    <!-- ส่วนซ้าย: ฟอร์ม -->
                    <div class="col-sm-2">
                        <form id="addSharpForm">
                            <div>
                                <Label for="sharpName">เพิ่มรูปร่าง</Label>
                                <input type="text" class="form-control" name="sharpName" id="sharpName" required>
                            </div>
                            <div align="center"><br>
                                <button type="button" class="btn btn-success btn-lg" onclick="addSharp()">เพิ่มรูปร่าง</button>
                            </div>
                        </form>
                    </div>

                    <!-- ส่วนขวา: ตารางแสดงข้อมูล -->
                    <div class="col-sm-9">
                        <table class="table" style="text-align: center;">
                            <thead>
                                <tr>
                                    <th scope="col">ลำดับ</th>
                                    <th scope="col">ชื่อรูปร่าง</th>
                                    <th scope="col">แก้ไข</th>
                                    <th scope="col">ลบข้อมูล</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% sharps.forEach(function(sharp, index) { %>
                                    <tr>
                                        <td>
                                            <%= index + 1 %>
                                        </td>
                                        <td>
                                            <%= sharp.sharpName %>
                                        </td>
                                        <td>
                                            <form class="editForm" action="/editSharp" method="POST">
                                                <!-- ใช้ input hidden เพื่อส่งค่า _id ไปยังหน้า edit -->
                                                <input type="hidden" name="edit_id1" value="<%= sharp._id %>">
                                                <!-- เพิ่มปุ่มสำหรับส่งแบบฟอร์ม -->
                                                <button type="submit" class="btn btn-primary">แก้ไข</button>
                                            </form>
                                            
                                        </td>
                                        <td>
                                            <form action="/deleteSharp" method="POST" style="display: inline;">
                                                <input type="hidden" name="delete_id" value="<%= sharp._id %>">
                                                <% if (sharp.isUsedInProducts === true) { %>
                                                    <button type="button" class="btn btn-danger ml-2" disabled title="ถูกใช้งานในสินค้า ลบไม่ได้">ลบ</button>
                                                <% } else { %>
                                                    <button type="submit" class="btn btn-danger ml-2" onclick="return confirm('คุณแน่ใจหรือไม่ว่าต้องการลบข้อมูลนี้? ')">ลบ</button>
                                                <% } %>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }); %>

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
    </body>

    </html>
    <script src="script/sharpScript.js"></script>